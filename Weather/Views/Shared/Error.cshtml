@using Weather.ViewModels
@model ErrorViewModel
@{
    Layout = "_Error";
    ViewData["Title"] = "Что-то пошло не так";
}

<div class="container">
    <h1 class="text-danger">Что-то пошло не так.</h1>
    <a asp-controller="Home" asp-action="Index"> На главную </a>

    <h2 class="text-danger">Вернитесь на главную страницу сайта и повторите Ваш запрос позднее.</h2>
</div>


@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
